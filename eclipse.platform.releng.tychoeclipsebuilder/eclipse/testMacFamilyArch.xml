<project name="testFamilies" default="testFamilies">

  <target name="testFamilies">
    <echo message="family ${os.name}" />

    <condition property="familyValue" value="mac">
      <os family="mac" />
    </condition>
    <echo message="familyValue: ${familyValue}" />
    <condition property="familyValue2" value="unix">
      <os family="unix" />
    </condition>
    <echo message="familyValue2: ${familyValue2}" />
    <condition property="archValue" value="x86_64">
      <os arch="x86_64" />
    </condition>
    <echo message="archValue: ${archValue}" />
  </target>
</project> 