<?xml version="1.0" encoding="UTF-8"?>

<plugin
	name="%pluginName"
	id="org.eclipse.test"
	version="2.1.0"
	provider-name="%providerName">

	<requires>
	   <import plugin="org.apache.ant"/>
	   <import plugin="org.junit"/>
	   <import plugin="org.eclipse.ant.core" optional="true"/>
	   <import plugin="org.eclipse.core.boot"/>
	   <import plugin="org.eclipse.swt" optional="true"/>
	   <import plugin="org.eclipse.ui" optional="true"/>
	</requires> 

	<runtime>
	   <library name="automated.jar"/>
	</runtime>

	<extension id="coretestapplication" point="org.eclipse.core.runtime.applications">
		<application>
			<run
				class="org.eclipse.test.CoreTestApplication">	      
			</run>
		</application>
	</extension>

	<extension id="uitestapplication" point="org.eclipse.core.runtime.applications">
		<application>
			<run
				class="org.eclipse.test.UITestApplication">
				<parameter name="productInfo" value="product.ini"/>
			</run>
		</application>
	</extension>
	
   <extension point="org.eclipse.ant.core.extraClasspathEntries">
      <extraClasspathEntry
            library="xalan.jar">
      </extraClasspathEntry>
    </extension>
</plugin>
