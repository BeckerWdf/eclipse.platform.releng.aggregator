<!-- Wire in the topics under the top level topics of the contents view            -->
<!-- ============================================================================= -->
<actions infoview="org.eclipse.platform.doc.isv.view_Contents" standalone="true">
	<insert  
		from="org.eclipse.platform.doc.isv.topics_Guide" 
		to="org.eclipse.platform.doc.isv.guideRoot" 
		as="child"/>

	<insert  
		from="org.eclipse.platform.doc.isv.topics_Reference" 
		to="org.eclipse.platform.doc.isv.referenceRoot" 
		as="child"/>

	<insert  
		from="org.eclipse.platform.doc.isv.topics_Samples" 
		to="org.eclipse.platform.doc.isv.samplesRoot" 
		as="child"/>


	<insert  
		from="org.eclipse.platform.doc.isv.topics_Questions" 
		to="org.eclipse.platform.doc.isv.questionsIndexRoot" 
		as="child"/>
</actions>